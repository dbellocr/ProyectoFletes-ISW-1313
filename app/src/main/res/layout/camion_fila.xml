<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_margin="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="195dp">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="195dp"
                    android:background="@drawable/ic_launcher_background"
                    android:scaleType="matrix" />

                <TextView
                    android:id="@+id/tvCercano"
                    android:layout_width="69dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:width="38dp"
                    android:background="#1C9603"
                    android:padding="2dp"
                    android:text="Cercano"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textSize="12sp" />

            </RelativeLayout>


            <RelativeLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvPlaca"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CL-193432"
                    android:textColor="#1A1A1A"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvModelo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvPlaca"
                    android:text="Toyota Hilux 2021" />


                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="Solicitar Flete" />

            </RelativeLayout>

            <TextView
                android:background="#414141"
                android:layout_marginBottom="7dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <TextView
                android:id="@+id/tvConductor"
                android:layout_width="255dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                android:padding="2dp"
                android:text="Conducido por: Daniel Bello Ramirez"
                android:textAlignment="center"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>